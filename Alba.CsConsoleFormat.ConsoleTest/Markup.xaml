<Document x:Name="doc" xml:lang="en-us"
        xmlns="urn:alba:cs-console-format" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        BgColor="Black" Color="Inherit" Width="80">
    <Border Stroke="1 2, Single Wide">
        <Para TextAlign="Center">
            <Span Text="{Get Title}" Color="White"/><Br/>
            <Span Text="{Get SubTitle}" Color="Gray"/><Br/>
            <Line Orientation="Horizontal"  Stroke="Wide"/>
            <Span Text="{Get Guid}" Color="Red"/><Br/>
            <Span Text="{Get Date, Format=D}" Color="Green"/><Br/>
            <Span Text="{Get Date, Format=D}" Color="Green" xml:lang="fr"/><Br/>
            <Span Text="{Get Date, Format=D}" Color="Green" xml:lang="it"/>
        </Para>
    </Border>
    <Para>
        <Repeater Items="{Get Items}">
            <Span Text="{Get Id}"/>
            <Span Text="{Get Name}"/>
        </Repeater>
        <Repeater Items="{Get Items}">
            <Span Text="{Get Value}"/>
        </Repeater>
    </Para>
